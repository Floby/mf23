{{page-title "Juger"}}
<form class="judge" {{action 'saveJudgement' this.newModel on="submit"}}>
  <div class="mention-picked">
    {{mention-label this.mention}}
  </div>
  <fieldset class="mention">
    <label for="mention">Jugement</label>
    <MentionPicker @value={{this.mention}} @onChange={{fn (mut this.mention)}} id="mention"/>
  </fieldset>
  <fieldset class="add-comment">
    <Textarea required {{input-autosize}} @value={{ this.comment }} placeholder="Ici, la motivation de votre jugement." id="comment" name="comment" cols="40" rows="2" />
    <fieldset class="controls">
      <a class="back" href="javascript:history.back()">&times; annuler</a>
      <input type="submit" value="&plus; enregistrer" />
    </fieldset>
  </fieldset>
</form>
