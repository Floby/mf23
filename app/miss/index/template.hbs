{{page-title "Les Miss"}}
<div class="header">
  <h2>Toutes les miss</h2>
  <progress max={{this.total}} value={{this.judged}}></progress>
  <legend><small>
      {{#if this.todo}}
        Encore {{this.todo}} miss à juger
      {{else}}
      🎉 Terminé !
        {{#if this.auth.isAuthenticated}}
          <LinkTo @route="miss.top">Classement général</LinkTo>
        {{/if}}
      {{/if}}
  </small></legend>
</div>
<GridList @list={{this.model.misses}} as |miss|>
    <MissThumb @miss={{miss}} @judgement={{get @model.judge.miss miss.id}}/>
</GridList>
{{outlet}}
