{{page-title "Les Juges"}}
<h2>Le panel</h2>

<ul class="judges">
  {{#each this.judges as |judge|}}
    <li class="judge">
      <div class="avatar">
        <img alt="" src={{if judge.autoAvatar (boring-avatar judge.nom) judge.avatar }} data-altsrc={{boring-avatar judge.nom}} role="none">
        <h3>{{ judge.nom }}</h3>
      </div>
      <dl class="stats">
        <dt>Progression</dt>
        <dd>{{percent judge.progress}}</dd>

        {{#let (safe-get this.awards judge.nom) as |award|}}
          {{#if award}}
              <dt>🏆</dt>
              <dd><a {{on 'click' (fn this.displayAward award judge.nom )}} href="#">{{award.title}}</a></dd>
          {{/if}}
        {{/let}}

        <dt>Likes</dt>
        <dd>&#x2605; {{judge.favTotal}}</dd>
        {{#if judge.fan}}
          <dt>Fan</dt>
          <dd>&#x2606; {{judge.fan.favs}} {{judge.fan.nom}}</dd>
        {{/if}}
        {{#if judge.favourite}}
          <dt>Favoris</dt>
          <dd>&#x2606; {{judge.favourite.favs}} {{judge.favourite.nom}}</dd>
        {{/if}}
        {{#if judge.hasTop}}
        <dt>
          <LinkTo @route="miss.top.judge" @model={{judge.id}}>Voir le top</LinkTo>
        </dt>
        <dd></dd>
        {{/if}}
      </dl>
    </li>
  {{/each}}
</ul>
