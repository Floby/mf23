{{page-title "Les Juges"}}
<h2>Le panel</h2>

<ul class="judges">
  {{#each @model.judges as |judge|}}
    <li class="judge">
      <div class="avatar">
        <img src={{judge.avatar}} data-altsrc={{boring-avatar judge.nom}} role="none">
        <h3>{{ judge.nom }}</h3>
      </div>
      <dl class="stats">
        <dt>Progression</dt>
        <dd>{{percent judge.progress}}</dd>
        <dt>Médiane</dt>
        <dd>{{mention-emoji judge.median}} <small>{{mention-label judge.median}}</small></dd>
      </dl>
    </li>
  {{/each}}
  <li class="judge">
    <div class="avatar">
      <img src="https://lh3.googleusercontent.com/a/ALm5wu2NuxKYtxFCYWiiq6ZrSwKCWtrBSGAb8V6n4bJeb_w=s96-c" alt="" role="none">
      <h3>Xelle</h3>
    </div>
    <dl class="stats">
      <dt>Progression</dt>
      <dd>18/30</dd>
      <dt>Médiane</dt>
      <dd>{{mention-emoji 3}} <small>{{mention-label 3}}</small></dd>
    </dl>
  </li>
</ul>
